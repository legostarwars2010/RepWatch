LEGISCAN_API_KEY=your_legiscan_api_key_here
DATABASE_URL=postgres://user:pass@host:5432/dbname
# Optional
GOVTRACK_API_KEY=
# Copy this to .env and fill in secrets for local development
# Do NOT commit your real .env to source control

# Primary DATABASE_URL (preferred)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Or use NEON_DATABASE_URL if you're using Neon managed Postgres
# NEON_DATABASE_URL=postgresql://user:password@host:5432/dbname

# Optional: allow insecure TLS (not recommended for production)
# DB_ALLOW_INSECURE_TLS=false

# Server port
# PORT=8080

# LLM configuration knobs (phase 2 hardening)
# LLM model to use for summaries/explanations
# LLM_MODEL=gpt-4o-mini
# Per-call timeout (ms)
# LLM_TIMEOUT_MS=8000
# Number of retries for transient LLM errors
# LLM_MAX_RETRIES=2
# Sampling temperature for responses
# LLM_TEMPERATURE=0.2

# Cache TTLs and prompt versioning
# AI_SUMMARY_TTL_DAYS=30
# AI_EXPLAIN_TTL_DAYS=30
# AI_PROMPT_VERSION=v2
